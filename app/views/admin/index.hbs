  <div class="banner-carousel-item" style="background-image:url(/images/university/students.jpg)">
    <div class="slider-content">
        <div class="container h-100">
          <div class="row align-items-center h-100">
              <div class="col-md-12 text-center">
                <h2 class="slide-title" data-animation-in="slideInLeft">University Admin Page</h2>
                <h3 class="slide-sub-title" data-animation-in="slideInRight">Applicant List</h3>
                <p data-animation-in="slideInLeft" data-duration-in="1.2">
                </p>
              </div>
          </div>
        </div>
