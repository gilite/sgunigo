  </div>
</div>
<br>
<br>
    <div class="container">
        <div class="row text-center">
            <div class="col-12">
            <!--<h2 class="section-title">SMU Application list</h2>-->
            <h3 class="section-sub-title" style="margin-bottom: 0;">{{university}} Applicant list</h3>
            
            </div>
        </div>
    </div>
    <br>
    <div style="display: flex; justify-content: center; align-items: center; margin: 0px 0px">
                {{#if applications.Applications}}
                <table class="table table-striped table-bordered" style="font-size:12px; width:1400px; line-height: 18px; word-wrap: break-word; table-layout:fixed">
                    <thead>
                        <tr>
                            <th rowspan="2" width="3.5%">No.</th>
                            <th rowspan="2">Name</th>
                            <th rowspan="2">NRIC</th>
                            <th rowspan="2" width="5.5%">Sex</th>
                            <th rowspan="2" width="6%">Race</th>
                            <th rowspan="2">Nationality</th>
                            <th rowspan="2">DOB</th>
                            <th rowspan="2">Email</th>
                            <th rowspan="2">Mobile No.</th>
                            <th rowspan="2" width="5.5%">Postal Code</th>
                            <th rowspan="2" width="6%">Grades</th>
                            <th colspan="3" style="text-align: center;">Courses</th>
                            <th rowspan="2">Personal Statement</th>
                            <th rowspan="2">View Transcripts</th>
                        </tr>
                        <tr>
                            <th>1st Choice</th>
                            <th>2nd Choice</th>
                            <th>3rd Choice</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each applications.Applications}}
                        <tr>
                            <th scope="row">1</th>
                            <td>{{applicant_name}}</td>
                            <td>{{#hideNric nric}}{{/hideNric}}</td>
                            <td>{{sex}}</td>
                            <td>{{race}}</td>
                            <td>{{nationality}}</td>
                            <td>{{dob}}</td>
                            <td>{{email}}</td>
                            <td>{{mobile_no}}</td>
                            <td>{{#postalCode address}}{{/postalCode}}</td>
                            <td>{{grades}}</td>
                            <td>{{course1}}</td>
                            <td>{{course2}}</td>
                            <td>{{course3}}</td>
                            <td>{{statement}}</td>
                            <td><button type="button" class="btn btn-secondary"><a href="https://storage.googleapis.com/sgunigo-files/{{userid}}{{userid}}.pdf" target="_blank" style="font-size:12px;">View</a></button></td>
                        </tr>
                        {{/each}}
                    </tbody>
                    </table>
                    {{else}}
                    <p>You do not have any applicants yet.</p>
                    {{/if}}
        </div>
        <br>
        <br>
        <br>