<div class="banner-carousel banner-carousel-1 mb-0">
  <div class="banner-carousel-item" style="background-image:url(/images/university/smuscis.jpg)">
    <div class="slider-content">
        <div class="container h-100">
          <div class="row align-items-center h-100">
              <div class="col-md-12 text-center">
                <h2 class="slide-title" data-animation-in="slideInLeft">University Admin Page</h2>
                <h3 class="slide-sub-title" data-animation-in="slideInRight">Applicant List</h3>
                <p data-animation-in="slideInLeft" data-duration-in="1.2">
                </p>
              </div>
          </div>
        </div>
    </div>
  </div>
</div>

<section id="main-container" class="main-container">
    <div class="sized-container special">
        <div class="row text-center">
            <div class="col-12">
            <!--<h2 class="section-title">SMU Application list</h2>-->
            <h3 class="section-sub-title">{{university}} Applicant list</h3>
            
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="form-group">
                {{#if applications}}
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th rowspan="2" >No.</th>
                            <th rowspan="2">Name</th>
                            <th rowspan="2">NRIC</th>
                            <th rowspan="2">Grades</th>
                            <th rowspan="2">Nationality</th>
                            <th rowspan="2">Email</th>
                            <th rowspan="2">Address</th>
                            <th rowspan="2">Mobile No.</th>
                            <th colspan="3" style="text-align: center;">Courses</th>
                            <th rowspan="2">Personal Statement</th>
                        </tr>
                        <tr>
                            <th>1st Choice</th>
                            <th>2nd Choice</th>
                            <th>3rd Choice</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each applications.Applications}}
                        <tr>
                            <th scope="row">1</th>
                            <td>{{applicant_name}}</td>
                            <td>{{nric}}</td>
                            <td>{{grades}}</td>
                            <td>{{nationality}}</td>
                            <td>{{email}}</td>
                            <td>{{address}}</td>
                            <td>{{mobile_no}}</td>
                            <td>{{course1}}</td>
                            <td>{{course2}}</td>
                            <td>{{course3}}</td>
                            <td>{{statement}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                    </table>
                    {{else}}
                    <p></p>
                    {{/if}}
            </div>
        </div>
        
</section>