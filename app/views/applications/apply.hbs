<section class="hero-area">
		<div class="container">
			<div class="row justify-content-center">
					<div class="hero-content-div text-center">
						<div class="hero-content">
							<h1>Submit Your Application</h1>
							<p>Note that you can only submit one application per university and application cycle.</p>
						</div>
					</div>
			</div>
		</div>
        <br>
        <br>
		
    <div class="pagination-container">
        <div class="sized-container">
            <div class="pagination"></div>
        </div>
        </div>
        <div class="viewport">
        <form action="/profile" method="POST" id="formApplication" class="toggle_content">
        <ul class="slide-container">
            <li class="slide" data-tag="Personal Details">
            <div class="sized-container special">
                <div class="col-md-12 col-lg-6 form-box mb-4">
                        <h4>1. Personal Details</h4>
						<br>
						<div class="form-group">
							<label>NRIC</label>
							<div class="input-group">
								<input type="text" class="form-control" name="nric" id="nric" value="{{userProfile.nric}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Full Name</label>
							<div class="input-group">
								<input type="text" class="form-control" name="applicant_name" id="applicant_name" value="{{userProfile.applicant_name}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Sex</label>
							<div class="input-group">
								<input type="text" class="form-control" name="sex" id="sex" value="{{userProfile.sex}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Race</label>
							<div class="input-group">
								<input type="text" class="form-control" name="race" id="race" value="{{userProfile.race}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Nationality</label>
							<div class="input-group">
								<input type="text" class="form-control" name="nationality" id="nationality" value="{{userProfile.nationality}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Date Of Birth</label>
							<div class="input-group">
								<input type="text" class="form-control" name="dob" id="dob" value="{{userProfile.dob}}" required>
							</div>
						</div>
						<hr>
						<div class="form-group">
							<label>Email</label>
							<div class="input-group">
								<input type="text" class="form-control" name="email" id="email" value="{{userProfile.email}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Mobile Number</label>
							<div class="input-group">
								<input type="text" class="form-control" name="mobile_no" id="mobile_no" value="{{userProfile.mobile_no}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Registered Address</label>
							<div class="input-group">
								<textarea cols="53" rows="3" name="address" id="address" required>{{userProfile.address}}</textarea>
							</div>
						</div>
						<hr>
						<div class="form-group">
							<label>Grades</label>
							<div class="input-group">
								<input type="text" class="form-control" name="grades" id="grades" value="{{userProfile.grades}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Personal Statement</label>
							<div class="input-group">
								<textarea cols="53" rows="6" name="statement" id="statement" placeholder="Max 300 words" required>{{userProfile.statement}}</textarea>
							</div>
						</div>
						<!-- Hidden field: User ID-->
						<input type="hidden" name="userid" id="userid" value="{{userId}}">
					</div>
            </div>
            </li>

            <li class="slide" data-tag="Course Preference">
			<div class="sized-container special">
                <h1>2. Course Preference</h1>
                <h2>Please Indicate Your Top 3 Choice of Course</h2><br>
				
				<div class="form-group">
				<table class="table">
					<div class="form-group row">
						<div class="col-sm-5">
						<label for="university" class="font-weight-bold">Choose a University:</label>
						<select id="university" name="university" class="form-control col-sm-12">
							<option>Choose a university</option>
							<option value="NUS">NUS</option>
							<option value="NTU">NTU</option>
							<option value="SMU">SMU</option>
							<option value="SIT">SIT</option>
							<option value="SUSS">SUSS</option>
							<option value="SUTD">SUTD</option>
						</select>
						</div>
					</div><br>

					<thread>
						<tr>
							<th scope="col">Choice Order</th>
							<th scope="col">Course Name</th>
						</tr>
					</thread>
					<tbody>
						<tr>
							<th scope="row">1st</th>
							<td>
							<div class="form-group row">
							<div class="col-sm-9">
								<input type="text" name='course1' id='course1' class="form-control" placeholder="COURSE NAME" required>
							</div>
							</div>
							</td>
						</tr>

						<tr>
							<th scope="row">2nd</th>
							<td>
							<div class="form-group row">
							<div class="col-sm-9">
								<input type="text" name='course2' id='course2' class="form-control" placeholder="COURSE NAME" required>
							</div>
							</div>
							</td>
						</tr>
						<tr>
							<th scope="row">3rd</th>
							<td>
							<div class="form-group row">
							<div class="col-sm-9">
								<input type="text" name='course3' id='course3' class="form-control" placeholder="COURSE NAME" required>
							</div>
							</div>
							</td>
						</tr>

					</tbody>
				</table>
				</div>
            </div>

			<div class="col-md-12 text-center">
				<input type="submit" class="btn btn-danger" id="submit" value="Submit">
			</div>
            </li>
        </ul>
        </div>
        <div class="full-width-container">
        <div class="button-container sized-container">
			<p>By applying, you agree to our <a href="https://www.termsandconditionsgenerator.com/live.php?token=mDNKCXF21YZLJlKGi1MmcSszfdSdFLo5" style="color:dodgerblue">Terms & Conditions</a>.</p>
            <button class="next">next</button>
            <button class="previous">previous</button>
        </div>
    </div>



				</div>
			</div>
		</form>

	</section>