<section class="hero-area">
		<div class="container">
			<div class="row justify-content-center">
					<div class="hero-content-div text-center">
						<div class="hero-content">
							<h1>Submit Your Application</h1>
							<p>Note that you can only submit one application per university and application cycle.</p>
						</div>
					</div>
			</div>
		</div>
        <br>
        <br>

    <div class="pagination-container">
        <div class="sized-container">
            <div class="pagination"></div>
        </div>
        </div>
        <div class="viewport">
        <form action="/profile" method="POST" id="formApplication" class="toggle_content">
        <ul class="slide-container">
            <li class="slide" data-tag="Personal Details">
            <div class="sized-container special">
                <div class="col-md-12 col-lg-5 form-box mb-4">
                        <h4>1. Personal Details</h4>
						<br>
						<div class="form-group">
							<label>NRIC</label>
							<div class="input-group">
								<input type="text" class="form-control" name="uinfin" id="uinfin" value="{{userProfile.uinfin}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Full Name</label>
							<div class="input-group">
								<input type="text" class="form-control" name="name" id="name" value="{{userProfile.name}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Sex</label>
							<div class="input-group">
								<input type="text" class="form-control" name="sex" id="sex" value="{{userProfile.sex}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Race</label>
							<div class="input-group">
								<input type="text" class="form-control" name="race" id="race" value="{{userProfile.race}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Nationality</label>
							<div class="input-group">
								<input type="text" class="form-control" name="nationality" id="nationality" value="{{userProfile.nationality}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Date Of Birth</label>
							<div class="input-group">
								<input type="text" class="form-control" name="dob" id="dob" value="{{userProfile.dob}}" required>
							</div>
						</div>
						<hr>
						<div class="form-group">
							<label>Email</label>
							<div class="input-group">
								<input type="text" class="form-control" name="email" id="email" value="{{userProfile.email}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Mobile Number</label>
							<div class="input-group">
								<input type="text" class="form-control" name="mobileno" id="mobileno" value="{{userProfile.mobileno}}" required>
							</div>
						</div>
						<div class="form-group">
							<label>Registered Address</label>
							<div class="input-group">
								<textarea cols="53" rows="3" name="regadd" id="regadd" required>{{userProfile.regadd}}</textarea>
							</div>
						</div>
						<hr>
						<div class="form-group">
							<label>Grades</label>
							<div class="input-group">
								<input type="text" class="form-control" name="grades" id="grades" value="{{userProfile.grades}}" required>
							</div>
						</div>
					</div>
            </div>
            </li>
            <li class="slide" data-tag="Course Preference">
            <div class="sized-container">
                <h1>Tell us about your area of expertise.</h1>
                <h2>Information about this section.</h2>
            </div>
            </li>
            <li class="slide" data-tag="Academic Details">
            <div class="sized-container">
                <h1>Tell us about your area of expertise.</h1>
                <h2>Information about this section.</h2>
            </div>
            </li>
            <li class="slide" data-tag="Upload Files">
            <div class="sized-container">
                <h1>Lets get a little more in depth.</h1>
                <h2>Information about this section.</h2>
            </div>
            </li>
            <li class="slide" data-tag="Confirmation">
            <div class="sized-container">
                <h1>Lets get a little more in depth.</h1>
                <h2>Information about this section.</h2>
            </div>
            </li>
        </ul>
        </div>
        <div class="full-width-container">
        <div class="button-container sized-container">
            <button class="next">next</button>
            <button class="previous">previous</button>
        </div>
    </div>


		
				
					<div class="col-md-12 text-center">
						<input type="submit" class="btn btn-danger" value="Save">
					</div>
				</div>
			</div>
		</form>

	</section>